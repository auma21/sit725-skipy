<%- include('../partials/header') %>
  <main>
    <!-- List of Restaurants -->
    <section>
      <div class="container">
        <div class="row">
          <div class="col s12 center-align">
            <h3 class="aum-extrabold aum-text-3xl">Popular Restaurants</h3>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row">
          <% restaurants.forEach(restaurant=> { %>
            <div class="col s4">
              <div class="card medium">
                <div class="card-image">
                  <img src="<%= restaurant.restaurantImageUrl %>">
                </div>

                <div class="card-content">
                  <span class="card-title activator grey-text text-darken-4 font-Pacifico">
                    <%= restaurant.restaurantName %><i class="material-icons right">more_vert</i>
                  </span>
                  <p>
                    <%= restaurant.address %>
                  </p>
                </div>

                <div class="card-action aum-bc-green">
                  <a class="white-text" href="/api/restaurants/<%= restaurant._id %>">More Information</a>
                </div>

                <div class="card-reveal">
                  <span class="card-title grey-text text-darken-4 font-Pacifico">
                    <%= restaurant.restaurantName %><i class="material-icons right">close</i>
                  </span>
                  <p class="card-text">
                    <%= restaurant.description %>
                  </p>

                  <p class="card-text aum-extrabold">Hours of Operation</p>
                  <p class="card-text">
                    <%= restaurant.workingHours %>
                  </p>
                </div>

              </div>
            </div>
            <% }) %>

        </div>
      </div>
    </section>
  </main>
  <%- include('../partials/footer') %>