<%- include('../partials/top-a') -%>
<link rel="stylesheet" href="../../css/restaurant.css">
<link rel="stylesheet" href="../../css/base/header-a.css">
<%- include('../partials/top-b') -%>

<main>
  <section>
    <div class="bg-img">
      <input type="text" value="<%= restaurant.backgroundImg %>" hidden>
      <h1><%= restaurant.name %></h1>
      <p><%= restaurant.description%></p>
    </div>
  </section>
  <section class="container">
    <div class="info-bar">
      <div class="map">
        <i class="map-marker-alt"></i>
        <div>
          <h3>Location</h3>
          <p><%= restaurant.location %></p>
        </div>
      </div>
      <div class="contact">
        <i class="contact-marker-alt"></i>
        <div>
          <h3>Contact</h3>
          <p><%= restaurant.contactPhone %></p>
        </div>
      </div>
      <div class="hours">
        <i class="hours-marker-alt"></i>
        <div>
          <h3>Hours</h3>
          <p><%= restaurant.hours %></p>
        </div>
      </div>
    </div>
    <div class="photo">
      <h2 class="custom-h2">Photo Gallery</h2>
      <div class="carousel carousel-slider">
        <% restaurant.photoGallery.forEach(p => { %>
        <a class="carousel-item" href="#!"><img src="<%= p %>"></a>
        <% });  %>
      </div>
    </div>
    <div class="openHoursAndLocation">
      <div class="openHours">
        <h2 class="custom-h2">Operating Hours</h2>
        <div class="content">
          <ul>
            <% let openH=restaurant.openHours[0]; %>
            <li><span>Monday</span><span><%= openH.Monday%></span></li>
            <li><span>Tuesday</span><span><%= openH.Tuesday %></span></li>
            <li><span>Wednesday</span><span><%= openH.Wednesday %></span></li>
            <li><span>Thursday</span><span><%= openH.Thursday %></span></li>
            <li><span>Friday</span><span><%= openH.Friday %></span></li>
            <li><span>Saturday</span><span><%= openH.Saturday %></span></li>
            <li><span>Sunday</span><span><%= openH.Sunday %></span></li>
          </ul>
        </div>
      </div>
      <div class="location">
        <h2 class="custom-h2">Location</h2>
        <div class="content">
          <img src="https://ai-public.mastergo.com/ai/img_res/b0cddf25c9046578d16cc64f26732e6b.jpg" alt="">
        </div>
      </div>
    </div>

    <div class="dishes">
      <h2>Signature Dishes</h2>
      <div class="carousel carousel-slider">
        <% restaurant.photoGallery.forEach(p => { %>
        <a class="carousel-item" href="#!">
          <img src="<%= p %>">
          <h3>xxx</h3>
          <p>xxxx</p>
        </a>
        <% });  %>
      </div>
    </div>

    <div class="reviews">
      <h2 class="custom-h2">Customer Reviews</h2>
      <div class="r-outter">
        <div class="content">
          <div class="top">
            <div class="point">4.8</div>
            <div class="stars">
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star-half-alt"></i>
            </div>
            <div class="review">
              (256 reviews)
            </div>
          </div>

          <div class="r-person">
            <div class="r-info">
              <div class="r-img"><img src="https://ai-public.mastergo.com/ai/img_res/433b0dddc9f77a4eba751ebb6bce8d17.jpg" alt=""></div>
              <div class="r-nameAndStar">
                <h4>Emily Richardson</h4>
                <div>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                </div>
              </div>
            </div>
            <p>Exceptional dining experience! The atmosphere was elegant yet welcoming, and the service was impeccable. The beef tenderloin was cooked to perfection.
            </p>
          </div>

          <div class="r-person">
            <div class="r-info">
              <div class="r-img"><img src="https://ai-public.mastergo.com/ai/img_res/5f36bb341d30dcbeabc55cd212e70a27.jpg" alt=""></div>
              <div class="r-nameAndStar">
                <h4>Michael Thompson</h4>
                <div>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                </div>
              </div>
            </div>
            <p>A true culinary gem! The truffle risotto was outstanding, and the wine selection is extensive. Perfect for special occasions.</p>
          </div>
          <div>
          </div>
        </div>
      </div>
    </div>

  </section>

  <%- include('../partials/header-a') %>
</main>
<%- include('../partials/bottom-a') -%>

<script src="../../js/restaurant.js"></script>
<%- include('../partials/bottom-b') -%>